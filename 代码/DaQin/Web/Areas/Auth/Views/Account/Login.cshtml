@{
    ViewBag.Title = "大秦管理系统登录";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    body
    {
        background-color: #0d686b;
    }

    #panel
    {
        float: left;
        width: 400px;
        height: 305px;
        position: absolute;
        left: 50%;
        top: 50%;
    }

    #login
    {
        -moz-border-radius: 6px; /* Gecko browsers */
        -webkit-border-radius: 6px; /* Webkit browsers */
        border-radius: 6px; /* W3C syntax */
        background-color: #fff;
        width: 100%;
        height: 195px;
        margin-top: 20px;
        padding-top: 25px;
    }

    #title
    {
        text-align: center;
        color: #fff;
        font-size: 30px;
        word-spacing: 5px;
    }

    #login table
    {
        border-collapse: collapse;
        width: 100%;
    }

        #login table tr:first-child td
        {
            padding-bottom: 15px;
        }

        #login table tr td:first-child
        {
            width: 110px;
            text-align: right;
            font-size: 16px;
        }

        #login table tr td
        {
            padding: 5px;
            height: 20px;
        }

    .input
    {
        -moz-box-shadow: inset 1px 1px 5px #aaa;
        -webkit-box-shadow: inset 1px 1px 5px #aaa;
        box-shadow: inset 1px 1px 5px #aaa;
        width: 200px;
        height: 28px;
        border: solid 1px #999;
        padding: 3px;
        font-size: 16px;
        background-color: #fff;
    }

    #msg
    {
        font-size: 16px;
        color: red;
    }
</style>
<script type="text/javascript">
    $(function () {
        var panel = $("#panel");
        panel.css("left", panel.position().left - panel.width() / 2.0)
        panel.css("top", panel.position().top - panel.height() / 2.0)

        //初始华验证
        SimpoValidate.init();
    });

    //登录
    function loginIn() {
        if (SimpoValidate.valid()) {
            submitForm("frm", function (data) {
                if (data.ok) {
                    window.location = "/";
                }
                else {
                    $("#msg").html("登录失败：" + data.msg);
                }
            }, true);
        }
    }
</script>
<form id="frm" action="LoginIn">
    <div id="panel">
        <div id="title">
            大 秦 管 理 系 统
        </div>
        <div id="login">
            <table cellpadding="0" cellspacing="0" style="border-collapse: collapse;">
                <tr>
                    <td>用 户 名：</td>
                    <td>
                        <input class="input" type="text" name="userName" value="admin" />
                        <span class="valid" msg="请填写用户名"></span>
                    </td>
                </tr>
                <tr>
                    <td>密 码：</td>
                    <td>
                        <input class="input" type="password" name="pwd" value="1" />
                        <span class="valid" msg="请填写登录密码"></span>
                    </td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>
                        <div id="msg"></div>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" style="text-align: center;">
                        <input type="button" class="btn" value="登  录" onclick="loginIn()" style="height: 30px; width: 90px; font-size: 16px; line-height: 26px;" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>
